                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     mc:Ignorable="d" Title="{Resx ShortContract}"
                     xmlns:my="clr-namespace:Utility.Controls;assembly=Utility" 
                     xmlns:Converters="clr-namespace:Client.Converters"
